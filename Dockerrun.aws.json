{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "apel73/multi-client",
            "host": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "apel73/multi-server",
            "host": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "apel73/multi-worker",
            "host": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "apel73/multi-nginx",
            "host": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}